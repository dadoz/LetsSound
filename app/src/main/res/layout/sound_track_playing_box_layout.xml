<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/soundTrackPlayingBoxLayoutId"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/md_blue_grey_900">
    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_alignParentTop="true"
        android:id="@+id/soundTrackProgressbarId"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/soundTrackTitleTextId"
        android:layout_marginRight="@dimen/extra_large_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_blue_grey_100"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/title_text_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="sound track"/>
    <TextView
        android:layout_below="@id/soundTrackTitleTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:textColor="@color/md_blue_grey_500"
        android:textSize="@dimen/title_text_medium"
        android:text="Author"/>

    <ImageView
        android:id="@+id/pausePlayingBoxButtonId"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_pause"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/playPlayingBoxButtonId"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"/>
</RelativeLayout>
</LinearLayout>
