<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchNoItemLayoutId"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/searchNoItemImageId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/small_margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_disc_48dp"/>
    <TextView
        android:layout_below="@id/searchNoItemImageId"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_large"
        android:textColor="@color/md_amber_400"
        android:text="Search your preferite songs"/>
</RelativeLayout>