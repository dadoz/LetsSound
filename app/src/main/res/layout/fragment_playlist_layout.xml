<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <com.application.letssound.views.MostPlayedPlaylistView
        android:id="@+id/mostPlayedPlaylistContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/mostPlayedPlaylistContainerId"
        android:id="@+id/latestPlayRecyclerViewId"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:id="@+id/emptyResultHistoryLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32"
            android:src="@drawable/ic_sound_track_history_48dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_large"
            android:textColor="@color/md_amber_400"
            android:text="no recent songs played"/>
    </LinearLayout>
</RelativeLayout>
