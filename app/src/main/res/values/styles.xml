<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/md_amber_500</item>
        <item name="colorPrimary">@color/md_amber_400</item>
        <item name="android:textColorPrimary">@color/md_blue_grey_900</item>
        <item name="android:textColorSecondary">@color/md_blue_grey_800</item>
        <item name="android:color">@color/md_blue_grey_800</item>
        <item name="android:windowBackground">@color/md_blue_grey_900</item>
        <item name="colorAccent">@color/md_amber_400</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_900</item>
        <item name="android:navigationBarColor">@color/md_blue_grey_900</item>
        <item name="android:colorBackground">@color/md_blue_grey_900</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewDark</item>
        <item name="android:dropDownItemStyle">@style/DropDownItemDark</item>
    </style>

    <style name="AutoCompleteTextViewDark" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/md_blue_grey_900</item>
        <item name="android:textColorHint">@color/md_blue_grey_900</item>
    </style>
    <style name="DropDownItemDark" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="AlertDialogCustom" parent="AlertDialog.AppCompat">
        <item name="colorAccent">@color/md_amber_500</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/md_grey_200</item>
    </style>
</resources>
